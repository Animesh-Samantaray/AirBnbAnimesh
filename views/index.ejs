<% layout('/layout/boiler') %>
<%= success %>
<section class="container mt-5">
  <h1 class="text-center mb-5 fw-bold display-5">Explore Listings</h1>

  <div class="row g-4">
    <% for (let list of listing) { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <a href="/listing/<%= list._id %>" class="text-decoration-none text-dark">
          <div class="border rounded-4 overflow-hidden shadow-sm h-100">
            <img src="<%= list.image %>" alt="Listing Image"
                 class="w-100" style="aspect-ratio: 4/3; object-fit: cover;">

            <div class="p-3">
              <h5 class="fw-semibold mb-1"><%= list.title %></h5>
              <p class="text-muted mb-1" style="font-size: 0.95rem;">
                <%= list.location %>, <%= list.country %>
              </p>
              <p class="fw-bold text-success mb-0">
                â‚¹<%= list.price.toLocaleString('en-IN') %> 
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</section>
